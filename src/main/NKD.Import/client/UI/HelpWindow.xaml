<Window x:Class="NKD.Import.Client.UI.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"  Content="NKD Importer help system" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,7,0,0"/>
        <GroupBox Grid.Row="1"  Header="Content" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <WebBrowser VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Height="Auto" Name="webBrowser1"/>
            </ScrollViewer>
        </GroupBox>

    </Grid>
</Window>
