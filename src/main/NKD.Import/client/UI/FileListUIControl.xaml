<UserControl x:Class="NKD.Import.Client.UI.FileListUIControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,0,0,-51">
        <ListBox x:Name="listBoxFiles" HorizontalAlignment="Stretch" Height="225" Margin="0,65,0,0" VerticalAlignment="Top" SelectionMode="Extended" PreviewKeyUp="listBoxFiles_PreviewKeyUp"/>
        <Label Content="Select folder:" HorizontalAlignment="Left" Margin="0,23,0,0" VerticalAlignment="Top"/>
        <Button Content="..." HorizontalAlignment="Left" Margin="94,26,0,0" VerticalAlignment="Top" Width="23" Click="Button_Click_1"/>
        <Button x:Name="buttonClearList" Content="Clear" HorizontalAlignment="Left" Margin="10,317,0,0" VerticalAlignment="Top" Width="37" Click="buttonClearList_Click"/>
        <Button x:Name="buttonDelItemFromList" Content="Del" HorizontalAlignment="Left" Margin="52,317,0,0" VerticalAlignment="Top" Width="38" Click="buttonDelItemFromList_Click"/>
        <Button Content="Recursive..." HorizontalAlignment="Left" Margin="136,27,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</UserControl>
